
public class Person {

	public String name;
	private int age;
	private String jobTitle;
	
	public Person(String name, int age, String jobTitle) {
		
		this.name = name;
		this.age = age;
		this.jobTitle = jobTitle;
	}
	
	public void showName() {
		
		System.out.println(name);
	}
	
	public void showAge() {
		
		System.out.println(age);
	}
	
	public void showJob() {
		
		System.out.println(jobTitle);
	}
	
	
}
